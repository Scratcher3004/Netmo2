<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetMo.Pages.Settings">
    <ContentPage.Resources>
        <StyleSheet Source="../css/netmo.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label>ClientId</Label>
            <Entry x:Name="EntClientId" Placeholder="ClientId"></Entry>
            <Label>ClientSecret</Label>
            <Entry x:Name="EntClientSecret" Placeholder="ClientSecret"></Entry>
            <Label>Username</Label>
            <Entry x:Name="EntUserName" Placeholder="Username"></Entry>
            <Label>Password</Label>
            <Entry x:Name="EntPassword" Placeholder="Password" IsPassword="True"></Entry>
            <Label>DeviceId</Label>
            <Entry x:Name="EntDeviceId" Placeholder="DeviceId (MAC address)"></Entry>
            <Button x:Name="BtnSaveSettings" Clicked="BtnSaveSettings_Clicked" Text="Save Settings" TextColor="White" FontSize="Medium" BackgroundColor="#f50057"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>