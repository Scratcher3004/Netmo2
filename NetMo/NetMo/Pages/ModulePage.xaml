<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetMo.Pages.ModulePage">
    <ContentPage.Content>
        <ListView x:Name="LvModules" SeparatorVisibility="None" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Image  Source="wetterstationsmodul.jpg"  HeightRequest="200" Aspect="Fill"></Image>
                            <BoxView BackgroundColor="Black" Opacity="0.4"></BoxView>
                            <StackLayout VerticalOptions="End" Margin="5">
                                <Label Text="{Binding ModuleName}" FontSize="Large" TextColor="Yellow"></Label>
                                <!--<Label Text="{Binding Price}" FontSize="Medium" TextColor="White"></Label>
                                <Label Text="{Binding Description}" FontSize="Small" TextColor="White"></Label>-->
                            </StackLayout>

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>